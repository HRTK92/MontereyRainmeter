<UserControl x:Class="Clock.Controls.DigitalClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:clock="clr-namespace:Clock"
             xmlns:models="clr-namespace:Clock.Models"
             d:DataContext="{d:DesignInstance Type=models:ClockViewModel}"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Viewbox Name="TimeBox" VerticalAlignment="Center">
            <TextBlock Name="Time" HorizontalAlignment="Stretch" FontFamily="{StaticResource SfRegular}"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" Text="{Binding TimeString}"/>
        </Viewbox>
    </Grid>
</UserControl>