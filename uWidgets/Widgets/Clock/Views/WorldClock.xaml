<UserControl x:Class="Clock.Views.WorldClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Clock.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:WorldClockViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ContentPresenter Name="Clock1" Grid.Row="0" Grid.Column="0" Margin="{Binding Margin}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <ContentPresenter Name="Clock2" Grid.Row="0" Grid.Column="1" Margin="{Binding Margin}" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <ContentPresenter Name="Clock3" Grid.Row="1" Grid.Column="0" Margin="{Binding Margin}" HorizontalAlignment="Right" VerticalAlignment="Top" />
        <ContentPresenter Name="Clock4" Grid.Row="1" Grid.Column="1" Margin="{Binding Margin}" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</UserControl>