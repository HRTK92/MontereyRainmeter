<Window x:Class="Shared.Models.Widget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:models="clr-namespace:Shared.Models"
        ShowInTaskbar="False" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        d:DataContext="{d:DesignInstance Type=models:WidgetViewModel}" mc:Ignorable="d">
    <Border Background="{Binding Background}" CornerRadius="{Binding CornerRadius}">
        <ContentPresenter Content="{Binding Control}" />
    </Border>
</Window>
