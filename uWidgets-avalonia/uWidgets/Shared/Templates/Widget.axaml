<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Shared.Templates.Widget">
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="TransparencyLevelHint" Value="AcrylicBlur, Blur" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SystemDecorations" Value="None" />
        </Style>
    </Window.Styles>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Edit widget" />
            <Separator />
            <MenuItem Header="Size" IsEnabled="False" />
            <MenuItem Header="1x1 Small" Click="SetSmallSize" />
            <MenuItem Header="2x2 Medium" Click="SetMediumSize"/>
            <MenuItem Header="4x2 Wide" Click="SetWideSize"/>
            <MenuItem Header="4x4 Large" Click="SetLargeSize" />
            <Separator />
            <MenuItem Header="Remove widget" Click="Close"/>
            <Separator />
            <MenuItem Header="Settings" />
        </ContextMenu>
    </Window.ContextMenu>
</Window>
